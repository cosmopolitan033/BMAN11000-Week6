<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week6.MainPage" Title="Round-Robin Tournament">

    <StackLayout>
        <ListView x:Name="ListView1" RowHeight="100" VerticalOptions="CenterAndExpand" ItemTapped="ListView1_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding title}" Detail="{Binding description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
